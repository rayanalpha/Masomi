    "next": "15.5.2",
    "next-auth": "^4.24.11",
    "next-seo": "^6.8.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-wrap-balancer": "^1.1.1",
    "sharp": "^0.33.3",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.7"
